<h4>編集</h4>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <%= form_with model: @post do |f| %>
    <h4>タイトル</h4>
      <%= f.text_field :title %>
    <h4>内容</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>

